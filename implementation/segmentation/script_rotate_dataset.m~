clear;
dataDir = '../../dataset/Train/';
mkdir('../Train_rotated');
cd(dataDir);
dirContents = dir;
for i = 1:size(dirContents,1)
    fileName = dataSets(i).name;
    if ~endsWith(fileName, '.pgm')
        continue;
    end
    A = imread(fileName);
    A = seg_binairy(A);
    [A,angle] = seg_rotation(A);
    
    imwrite(A,strcat(fileName(1:end-3),'_r',num2str(angle),'.png'));
    
    
end